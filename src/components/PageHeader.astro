---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<section class="bg-gradient-to-br from-primary-700 to-primary-800 text-white py-16 lg:py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl">
      <h1 class="text-4xl sm:text-5xl font-bold mb-4 text-white">
        {title}
      </h1>
      {subtitle && (
        <p class="text-xl text-primary-100">
          {subtitle}
        </p>
      )}
    </div>
  </div>
</section>
