---
import { ArrowRight } from 'lucide-astro';

interface Props {
  title: string;
  description: string;
  href: string;
  icon: any;
}

const { title, description, href, icon: Icon } = Astro.props;
---

<div class="bg-white rounded-2xl p-8 shadow-sm border border-slate-100 hover:shadow-lg hover:border-primary-100 transition-all duration-300">
  <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center mb-6">
    <Icon class="w-7 h-7 text-primary-600" />
  </div>

  <h3 class="text-xl font-semibold mb-3">
    <a href={href} class="text-slate-900 hover:text-primary-600 transition-colors">{title}</a>
  </h3>

  <p class="text-slate-600 leading-relaxed">
    {description}
  </p>
</div>
