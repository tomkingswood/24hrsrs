---
import { ArrowRight } from 'lucide-astro';

interface Props {
  title: string;
  description: string;
  href: string;
  icon: any;
}

const { title, description, href, icon: Icon } = Astro.props;
---

<a
  href={href}
  class="group block bg-white rounded-2xl p-8 shadow-sm border border-slate-100 hover:shadow-lg hover:border-primary-100 transition-all duration-300"
>
  <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-primary-500 transition-colors">
    <Icon class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors" />
  </div>

  <h3 class="text-xl font-semibold text-slate-900 mb-3 group-hover:text-primary-600 transition-colors">
    {title}
  </h3>

  <p class="text-slate-600 mb-6 leading-relaxed">
    {description}
  </p>

  <span class="inline-flex items-center gap-2 text-primary-600 font-medium text-sm group-hover:gap-3 transition-all">
    Learn more
    <ArrowRight class="w-4 h-4" />
  </span>
</a>
