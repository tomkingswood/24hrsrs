---
import { Phone, Mail } from 'lucide-astro';

interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Need Help With Your Stairlift?",
  subtitle = "Our friendly team is available 24/7 to assist you. Get in touch today for a free quote."
} = Astro.props;
---

<section class="bg-gradient-to-r from-primary-600 to-primary-700 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-20">
    <div class="text-center max-w-3xl mx-auto">
      <h2 class="text-3xl sm:text-4xl font-bold mb-4 text-white">
        {title}
      </h2>
      <p class="text-lg text-primary-100 mb-10">
        {subtitle}
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="tel:01142347195"
          class="inline-flex items-center gap-3 bg-white text-primary-700 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-primary-50 transition-colors w-full sm:w-auto justify-center"
        >
          <Phone class="w-5 h-5" />
          0114 2347195
        </a>
        <a
          href="tel:07835204800"
          class="inline-flex items-center gap-3 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors border border-white/20 w-full sm:w-auto justify-center"
        >
          <Phone class="w-5 h-5" />
          07835 204800
        </a>
      </div>

      <p class="mt-8 text-primary-200 text-sm">
        Or email us at{' '}
        <a href="mailto:srs.24hr@hotmail.com" class="underline hover:text-white transition-colors">
          srs.24hr@hotmail.com
        </a>
      </p>
    </div>
  </div>
</section>
